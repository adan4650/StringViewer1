<Window x:Class="StringViewer1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:StringViewer1"
        Title="Large File Viewer" Height="800" Width="1000">
    <DockPanel>
        <!-- Replace the simple StackPanel with the new Grid interface -->
        <Grid Height="336" DockPanel.Dock="Top" Margin="6">
            <TextBox Height="30" Margin="11,16,155,0" Name="textBox1" VerticalAlignment="Top">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            
            <!-- File Selection ListBox -->
            <ListBox x:Name="FileSelectionListBox" 
                     Height="100" 
                     Margin="12,50,26,0" 
                     VerticalAlignment="Top"
                     Background="#708993"
                     BorderBrush="White"
                     BorderThickness="1"
                     Foreground="Black"/>
            
            <Button HorizontalAlignment="Right" Margin="0,14,26,0"
                    Name="button1" VerticalAlignment="Top"
                    Height="30" Width="120"
                    FontFamily="Verdana" FontSize="14" FontWeight="Normal"
                    Foreground="White" Background="#E7F2EF"
                    BorderBrush="Black"
                    Click="BrowseButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                Browse
            </Button>
            
            <!-- Buttons positioned right below the FileSelectionListBox (at y=160) -->
            <Button HorizontalAlignment="Left" Margin="12,160,0,0" Name="button4"
                    VerticalAlignment="Top"
                    Height="30" Width="110"
                    FontFamily="Verdana" FontSize="14" FontWeight="Normal"
                    Foreground="White" Background="#F44336"
                    BorderBrush="Black"
                    Click="RemoveFileButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                Remove File
            </Button>
            
            <Button Margin="129,160,156,0" Name="button3" VerticalAlignment="Top"
                    Height="30" FontFamily="Verdana" FontSize="14" FontWeight="Normal"
                    Foreground="Black" Background="#E7F2EF"
                    BorderBrush="Black"
                    Click="DisplayFile_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                Display File
            </Button>
            
            <Button HorizontalAlignment="Right" Margin="0,160,26,0" Name="button2"
                    VerticalAlignment="Top"
                    Height="30" Width="120"
                    FontFamily="Verdana" FontSize="14" FontWeight="Normal"
                    Foreground="White" Background="#E7F2EF"
                    BorderBrush="Black"
                    Click="AddAnotherFileButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                Add Another File
            </Button>
            
            <!-- Progress Bar positioned below the buttons (at y=200) -->
            <ProgressBar x:Name="LoadingProgressBar" 
                         Height="20" 
                         Margin="12,200,26,0" 
                         VerticalAlignment="Top"
                         Visibility="Collapsed"
                         Foreground="#4CAF50"
                         Background="#E0E0E0"/>
            
            <!-- Keep the FileInfoText for displaying file information -->
            <TextBlock x:Name="FileInfoText" VerticalAlignment="Bottom" HorizontalAlignment="Left" 
                       Margin="12,0,0,12" FontSize="10" Foreground="DarkBlue"/>
        </Grid>

        <ListBox x:Name="PagesListBox"
                 Background="White"
                 VirtualizingStackPanel.IsVirtualizing="True"
                 VirtualizingStackPanel.VirtualizationMode="Recycling"
                 ScrollViewer.IsDeferredScrollingEnabled="True"
                 ScrollViewer.CanContentScroll="True">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type local:PageViewModel}">
                    <Border Padding="6" Margin="2" BorderBrush="LightGray" BorderThickness="1" Background="White">
                        <StackPanel>
                            <TextBlock Text="{Binding DisplayHeader}" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock Text="{Binding TextPreview}" TextWrapping="Wrap" MaxHeight="200" Foreground="Black"/>
                            <Expander Header="Hex (expand to show)" IsExpanded="False">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Height="300" Background="White">
                                    <TextBlock Text="{Binding HexDump}" FontFamily="Consolas" FontSize="12" TextWrapping="NoWrap" Foreground="Black"/>
                                </ScrollViewer>
                            </Expander>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>