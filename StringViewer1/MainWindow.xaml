<Window x:Class="StringViewer1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="String Viewer" Height="600" Width="800">
    <Grid>
        <StackPanel>
            <Button Name="OpenFileButton" Content="Open File" Margin="10" Click="OpenFileButton_Click"/>
            <ListBox Name="StringListBox" Margin="10" FontFamily="Consolas" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>